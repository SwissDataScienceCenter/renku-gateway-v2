{
    "go.lintTool": "golangci-lint",
    "go.lintFlags": [
        "--fast"
    ],
    "emeraldwalk.runonsave": {
        "commands": [
            {
                "match": "\\.go$",
                "notMatch": "cmd/revproxy/main.go$",
                "cmd": "golines ${file} -w --max-len=120 --base-formatter=gofmt --ignore-generated --shorten-comments"
            }
        ]
    }
}
